<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Capstone" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="TextContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="fontFamily">@font/open_sans_bold</item>
    </style>

    <style name="TextContent.Secondary">
        <item name="fontFamily">@font/open_sans</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextContent.SubtitleDetails">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextContent.Details">
        <item name="fontFamily">@font/open_sans</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextContent.Small">
        <item name="fontFamily">@font/open_sans</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.Capstone" parent="Base.Theme.Capstone" />
</resources>